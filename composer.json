{
    "name": "commercegurus/cg-media-library-item",
    "description": "WordPress plugin to display media library items with enhanced presentation",
    "type": "wordpress-plugin",
    "authors": [
        {
            "name": "Colm Troy",
            "email": "colm@commercegurus.com"
        }
    ],
    "scripts": {
        "php:lint": "vendor/bin/phpcs -p -s",
        "php:lint:errors": "vendor/bin/phpcs -p -s --runtime-set ignore_warnings_on_exit 1",
        "php:format": "vendor/bin/phpcbf --report-summary --report-source -s  --runtime-set testVersion 7.0- ",
        "phpcs-i": "phpcs -i"
    },
    "minimum-stability": "stable",
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.11",
        "wp-coding-standards/wpcs": "^3.0"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
